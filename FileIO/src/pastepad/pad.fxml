<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="676.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pastepad.Controller">
   <children>
       <VBox fx:id="rootPane" prefHeight="676.0" prefWidth="350">
          <children>
            <TextArea fx:id="txtContent" prefHeight="655.0" prefWidth="350.0" promptText="Enter text here." style="-fx-background-color: #c4c3c5;" />
              <HBox fx:id="nestedPane" alignment="CENTER_RIGHT" prefHeight="51.0" prefWidth="350.0">
                 <children>
                  <VBox prefHeight="51.0" prefWidth="165.0" style="-fx-background-color: #403E39;">
                     <children>
                        <Label style="-fx-text-fill: #ffffff;" text="PastePad v0.1" />
                        <Label style="-fx-text-fill: #ffffff;" text="Git: starfighter-ix" />
                         <Label style="-fx-text-fill: #ffffff;" text="2016" />
                     </children>
                  </VBox>
                     <Button fx:id="btnCopy" alignment="CENTER" contentDisplay="CENTER" onAction="#onClickCopy" prefHeight="51.0" prefWidth="62.0" style="-fx-background-color: #FFD00E;" text="Copy" />
                  <Button fx:id="btnPaste" alignment="CENTER" contentDisplay="CENTER" onAction="#onClickPaste" prefHeight="51.0" prefWidth="62.0" style="-fx-background-color: #B1FFFB;" text="Paste" />
                  <Button fx:id="btnSave" alignment="CENTER" contentDisplay="CENTER" onAction="#onClickSave" prefHeight="51.0" prefWidth="62.0" style="-fx-background-color: #9FFF52;" text="Save" />
                 </children>
              </HBox>
          </children>
       </VBox>
   </children>

</Pane>
